<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_view_back_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/profile_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_pic"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/online"
                    android:drawablePadding="3dp"
                    android:text="Online"
                    android:textColor="@color/green_online_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/edit"
                    android:drawablePadding="2dp"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="@color/tab_bottom_bg_color" />

                <LinearLayout
                    android:id="@+id/doneLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/btn_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/check_sel"
                        android:drawablePadding="2dp"
                        android:padding="5dp"
                        android:text="Done"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:text="Cancel"
                        android:textColor="@color/tab_bottom_bg_color" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_firstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="First Name"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_lastname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Last Name"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/company_startup"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Company or Startup"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sort_bio"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:gravity="left|top"
                        android:hint="Sort bio (140 characters)"
                        android:imeOptions="actionNext"
                        android:minLines="3"
                        android:padding="5dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_skills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/skills"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Skills"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/current_city"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Current city"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/cmpny_website"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Company or personal Website"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/phone"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Phone no."
                        android:imeOptions="actionDone"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_bottom_bg_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittetxt_bg"
                        android:hint="Email id"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>