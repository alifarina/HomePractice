<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_view_back_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="9"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/border_grey_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_text_color"
                android:padding="8dp">

                <TextView
                    android:id="@+id/header_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_tabcolor_trance_bg"
                    android:padding="3dp"
                    android:textColor="@color/tab_bottom_bg_color" />

                <TextView
                    android:id="@+id/label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/tab_bottom_bg_color" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:text="8 PM"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:text="Thu, Sep 15"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tab_bottom_bg_color" />

            <TextView
                android:id="@+id/locationTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location_icon"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Location"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/tab_bottom_bg_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/tab_bottom_bg_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tab_bottom_bg_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/descriptionTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Deacription"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/tab_bottom_bg_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionTag"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/tab_bottom_bg_color" />

                <TextView
                    android:id="@+id/view_more_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description"
                    android:text="View more..."
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/red" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tab_bottom_bg_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Attendees"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/tab_bottom_bg_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/attendee_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/view_more_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="3dp"
                android:text="View more..."
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/red" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rsvp_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_tabcolor_white_bg"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_rsvp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="RSVP"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/tab_bottom_bg_color" />

                    <ImageView
                        android:id="@+id/img_rsvp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_rsvp"
                        android:padding="3dp"
                        android:src="@drawable/btn_arrow" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/tab_bottom_bg_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Recent Comments"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/tab_bottom_bg_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/commentsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/comment_click"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="displayComments"
                    android:padding="10dp"
                    android:src="@drawable/comment" />

                <ImageView
                    android:id="@+id/weblink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/location_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/dot_icon" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>